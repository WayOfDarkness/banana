<div class="top-bar">
    <header id="navbar" role="banner">
        <div class="max-width-container">
            <div class="header-logo">
                <div class="region region-header-logo">
                    <div id="block-gi5-branding" class="block block-system block-system-branding-block">
                        <a class="site-logo" href="/" rel="home" title="Home">
                            <img src="{{settings.logo | upload_url}}" alt="Home"/>
                        </a>
                    </div>
                </div>
            </div>
            <div class="header-nav">
                <div class="region region-header-nav">
                    <nav aria-labelledby="block-gi5-main-menu-menu" class="block block-menu navigation menu--main" id="block-gi5-main-menu" role="navigation">
                        <h2 class="visually-hidden" id="block-gi5-main-menu-menu">Main navigation</h2>
                        {% set header_menu = Menu ('menu') %}
                        <ul class="menu">
                            {% for item in header_menu.children %}
                                {% set active = item.link == url ? 'nav-active' : '' %}
                                <li class="menu-item font-arima" id="menu-News">
                                    <a href="{{item.link}}" class="{{active}}">
                                        {{item.title}}
                                    </a>
                                </li>
                            {% endfor %}
                        </ul>
                    </nav>
                </div>
            </div>
            <div class="header-right-container">
                <div class="header-icon search-button">
                    <div class="icon-search" onclick="showModalSearch(true)"></div>
                </div>
                <div class="block-login clearfix">
                    {% if customer.logged_in %}
                        <div class="isLoginSuccess">
                            <div class="user-avatar">
                                <img src="{{theme.uri}}/img/avatar-default.png" alt="avatar"/>
                            </div>
                            <p class="user-name">
                                {{customer.name}}
                            </p>
                            <div class="list-menu">
                                <a href="/api/signout">Đăng xuất</a>
                            </div>
                        </div>
                    </div>
                    {% else %}
                    <div id="login" class="clearfix">
                        <a class="header-icon btn-signin">Đăng nhập</a>
                        <a class="header-icon btn-signup">Đăng ký</a>
                    </div>
                {% endif %}
                <div class="header-icon expanded-menu-button">
                    <div class="icon-expanded"></div>
                </div>
            </div>
        </div>
    </header>
    <div class="header-dropdown" id="search-dropdown">
        <div class="x-close" onclick="showModalSearch(false)">x</div>
        <div class="max-width-container">
            <div class="region region-header-dropdown-search">
                <div class="views-exposed-form block block-views block-views-exposed-filter-blocksearch-content-page-1" data-drupal-selector="views-exposed-form-search-content-page-1" id="block-exposedformsearch-contentpage-1">
                    <span class="icon-search" onclick="doSearch(event)"></span>
                    <form accept-charset="UTF-8" id="views-exposed-form-search-content-page-1" method="get">
                        <div class="form--inline clearfix">
                            <div class="js-form-item form-item js-form-type-textfield form-type-textfield js-form-item-keyword form-item-keyword">
                                <label for="edit-keyword">Search</label>
                                <input class="form-text" data-drupal-selector="edit-keyword" id="edit-keyword" maxlength="128" name="keyword" onkeypress="doSearch(event)" size="30" type="text" value=""/>
                            </div>
                            <div class="form-actions js-form-wrapper form-wrapper" data-drupal-selector="edit-actions" id="edit-actions"><input class="button js-form-submit form-submit" data-drupal-selector="edit-submit-search-content" id="edit-submit-search-content" value="Search"/>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="slide-in scrollbar-lt" id="expanded-menu">
        <div class="max-width-container">
            <div class="hamburger-top">
                <div class="region region-header-hamburger-top">
                    <div class="views-exposed-form block block-views block-views-exposed-filter-blocksearch-content-page-1" data-drupal-selector="views-exposed-form-search-content-page-1" id="block-exposedformsearch-contentpage-1-2">
                        <span class="icon-search"></span>
                        <form accept-charset="UTF-8" id="views-exposed-form-search-content-page-1-mobile" method="get">
                            <div class="form--inline clearfix">
                                <div class="js-form-item form-item js-form-type-textfield form-type-textfield js-form-item-keyword form-item-keyword">
                                    <label for="edit-keyword">Search</label>
                                    <input class="form-text" data-drupal-selector="edit-keyword" id="edit-keyword-mobile" maxlength="128" name="keyword" onkeypress="doSearchMobile(event)" size="30" type="text" value=""/>
                                </div>
                                <div class="form-actions js-form-wrapper form-wrapper" data-drupal-selector="edit-actions" id="edit-actions-mobile"><input class="button js-form-submit form-submit" data-drupal-selector="edit-submit-search-content" id="edit-submit-search-content-mobile" value="Search"/>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="hamburger-middle">
                <div class="region region-header-hamburger">
                    <nav aria-labelledby="block-hamburgermenu-menu" class="block block-menu navigation menu--hamburger-menu" id="block-hamburgermenu" role="navigation">
                        <h2 class="visually-hidden" id="block-hamburgermenu-menu">Hamburger Menu</h2>
                        {% set header_menu = Menu ('menu') %}
                        <ul class="menu">
                            {% for item in header_menu.children %}
                                {% set active = item.link == url ? 'nav-active' : '' %}
                                <li class="menu-item font-arima" id="menu-News">
                                    <a href="{{item.link}}" class="{{active}}">
                                        {{item.title}}
                                    </a>
                                </li>
                            {% endfor %}
                        </ul>
                    </nav>
                </div>
            </div>
            
            {% if customer.logged_in %}
                <div class="isLoginSuccess mobile">
                    <div class="user-avatar">
                        <img src="{{theme.uri}}/img/avatar-default.png" alt="avatar"/>
                    </div>
                    <p class="user-name">
                        {{customer.name}}
                        <img alt="menu-down" src="{{theme.uri}}/img/icon-menu-down.png" width="26px"/>
                    </p>
                </div>
                <a class="text-orange border" href="/api/signout">Đăng xuất</a>
            {% else %}
                <div class="hamburger-bottom">
                    <div id="toolbar-item-lightswitch">&nbsp;</div>
                    <div class="user-menu user-loggedout main-nav">
                        <ul>
                            <li><a class="cd-signin" href="javascript:;">Đăng nhập</a></li>
                            <li><a class="cd-signup" href="javascript:;">Đăng ký</a></li>
                        </ul>
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
</div>