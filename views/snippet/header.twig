        <div class="block-login clearfix">
          {% if customer.logged_in %}
          <div class="isLoginSuccess">
            <div class="user-avatar">
              {% if customer.avatar %}
                <img src="{{ customer.avatar | upload_url }}" alt="avatar"/>
              {% else %}
                <img src="{{ theme.uri }}/img/avatar-default.png" alt="avatar"/>
              {% endif %}
            </div>
            <p class="user-name">
              {{ customer.name }}
            </p>
            <div class="list-menu">
              <a href="/user_account">Trang cá nhân</a>
              <a href="/api/signout">Đăng xuất</a>
            </div>
          </div>
        </div>
