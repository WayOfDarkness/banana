  <div class="slide-in scrollbar-lt" id="expanded-menu">
    {% if customer.logged_in %}
      <div class="isLoginSuccess mobile">
        <div class="user-avatar">
          {% if customer.avatar %}
            <img src="{{ customer.avatar | upload_url }}" alt="avatar"/>
          {% else %}
            <img src="{{ theme.uri }}/img/avatar-default.png" alt="avatar"/>
          {% endif %}
          <p class="user-name">
            {{ customer.name }}
          </p>
        </div>
      </div>
    {% endif %}
    <div class="max-width-container">
      <div class="hamburger-top">
        <div class="region region-header-hamburger-top">
          <div class="views-exposed-form block block-views block-views-exposed-filter-blocksearch-content-page-1"
               data-drupal-selector="views-exposed-form-search-content-page-1"
               id="block-exposedformsearch-contentpage-1-2">
            <span class="icon-search"></span>
            <form accept-charset="UTF-8" id="views-exposed-form-search-content-page-1-mobile" method="get">
              <div class="form--inline clearfix">
                <div
                  class="js-form-item form-item js-form-type-textfield form-type-textfield js-form-item-keyword form-item-keyword">
                  <label for="edit-keyword">Search</label>
                  <input class="form-text" data-drupal-selector="edit-keyword" id="edit-keyword-mobile"
                         maxlength="128"
                         name="keyword" onkeypress="doSearchMobile(event)" size="30" type="text" value=""
                         placeholder="Search..."/>
                </div>
                <div class="form-actions js-form-wrapper form-wrapper" data-drupal-selector="edit-actions"
                     id="edit-actions-mobile"><input class="button js-form-submit form-submit"
                                                     data-drupal-selector="edit-submit-search-content"
                                                     id="edit-submit-search-content-mobile" value="Search"/>
                </div>
