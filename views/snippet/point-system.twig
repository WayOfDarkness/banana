{% if item.admin_point == 10 %}
    {% set admin_point_label = 'Hoàn hảo' %}
    {% elseif item.admin_point == 9 %}
    {% set admin_point_label = 'Xuất sắc' %}
    {% elseif item.admin_point == 8 %}
    {% set admin_point_label = 'Hay' %}
    {% elseif item.admin_point == 7 %}
    {% set admin_point_label = 'Khá' %}
    {% elseif item.admin_point == 6 %}
    {% set admin_point_label = 'Tạm được' %}
    {% elseif item.admin_point == 5 %}
    {% set admin_point_label = 'Trung bình' %}
    {% elseif item.admin_point == 4 %}
    {% set admin_point_label = 'Nghèo nàn' %}
    {% elseif item.admin_point == 3 %}
    {% set admin_point_label = 'Tệ' %}
    {% elseif item.admin_point == 2 %}
    {% set admin_point_label = 'Quá tệ' %}
    {% elseif item.admin_point == 1 %}
    {% set admin_point_label = 'Trash' %}
