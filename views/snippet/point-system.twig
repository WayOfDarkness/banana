    {% set admin_point_label = 'Chưa đánh giá' %}
{% endif %}

{% if shop.host ~ '/' == url %}
    <dd>{{admin_point_label}}</dd>
{% else %}
    <span class="score-word">{{admin_point_label}}</span>
{% endif %}

