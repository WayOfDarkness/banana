{% extends "layout.twig" %}

{% block pre_include %}
    <title>All Riddles</title>
    <link href="https://fonts.googleapis.com/css?family=Patrick+Hand" rel="stylesheet">
    <style>
        body {
            background-color: #000000;
            color: #FFFFFF;
            text-align: center;
            margin: 0;
            overflow: hidden;
        }
        .page-article .layout-container {
            display: flex !important;
        }
        .all-riddles-container {
            margin-top: 100px;
            margin-bottom: 50px;
            margin-left: auto;
            margin-right: auto;
            box-sizing: border-box;
            font-size: 24px;
            padding: 10px;
            font-family: 'Patrick Hand', cursive !important;
        }
        .item {
            float: left;
            width: 450px;
            margin-left: 15px;
            margin-right: 15px;
            position: relative;
        }
        .item .border-image {
            position: absolute;
            top: 0;
            left: -10px;
            width: 470px;
            height: 280px;
        }
        .item .border-image img {
            width: 100%;
            height: 100%;
        }
        .item.riddle-solved {
            opacity: 1;
        }
        .item.riddle-solved:before {
            position: absolute;
            content: '';
            width: 100%;
            height: 280px;
            top: 0;
            left: 0;
            background: rgba(0, 0, 0, 0.825);
        }
        .item.riddle-solved:after {
            position: absolute;
            content: '';
            background-image: url({{theme.uri}}/img/four-seasons/tick-done.png);
            background-size: 100% 100%;
            filter: brightness(500%);
            top: 38%;
            left: 52%;
            width: 100px;
            height: 100px;
            transform: translate(-50%, -50%);
        }
        .solved-number {
            position: absolute;
            top: 30px;
            left: 400px;
            font-size: 40px;
        }
        .label {
            font-size: 30px;
            line-height: 2;
        }
        .riddle-img {
            height: 280px;
        }
    </style>
{% endblock %}

{% block content %}

    {% set riddle = [
        Gallery('starting-riddle-domino-dance'),
        Gallery('the-four-paths'),
        Gallery('final-riddle'),
    ] %}

    <div class="all-riddles-container">
        <div class="item {{riddle[0].role == 2 ? 'riddle-solved' : ''}}">
            <a href="https://choigiday.com/starting-riddle-domino-dance">
                <img class="riddle-img" alt="Domino Dance" src="{{riddle[0].photos[0].image | upload_url}}">
                <div class="border-image">
                    <img alt="stone frame border" src="{{theme.uri}}/img/four-seasons/stone-frame-medium.png">
                </div>
                <span class="solved-number">0
                    {# {{riddle[i].role != 0 ? riddle[i].top : null}} #}
                </span>
            </a>
            <div class="label">Starting Riddle</div>
        </div>
        <div class="item {{riddle[i].role == 2 ? 'riddle-solved' : ''}}">
            <a href="{{riddle[i].role != 0 ? riddle[i].url : '#'}}">
                <img class="riddle-img" alt="{{riddle[i].role != 0 ? getCustomField(riddle[i].id, 'gallery', 'current-riddle') : 'locked'}}" src="{{riddle[i].role != 0 ? riddle[i].photos[0].image | upload_url : '/themes/banana/img/four-seasons/locked.jpg'}}">
                <div class="border-image">
                    <img alt="stone frame border" src="{{theme.uri}}/img/four-seasons/stone-frame-medium.png">
                </div>
                <span class="solved-number">0
                    {# {{riddle[i].role != 0 ? riddle[i].top : null}} #}
                    
                </span>
            </a>
            <div class="label">The Four Paths</div>
        </div>
        <div class="item {{riddle[i].role == 2 ? 'riddle-solved' : ''}}">
            <a href="{{riddle[i].role != 0 ? riddle[i].url : '#'}}">
                <img class="riddle-img" alt="{{riddle[i].role != 0 ? getCustomField(riddle[i].id, 'gallery', 'current-riddle') : 'locked'}}" src="{{riddle[i].role != 0 ? riddle[i].photos[0].image | upload_url : '/themes/banana/img/four-seasons/locked.jpg'}}">
                <div class="border-image">
                    <img alt="stone frame border" src="{{theme.uri}}/img/four-seasons/stone-frame-medium.png">
                </div>
                <span class="solved-number">0
                    {# {{riddle[i].role != 0 ? riddle[i].top : null}} #}
                </span>
            </a>
            <div class="label">Final Riddle</div>
        </div>
    </div>
{% endblock content %}
