                </div>

                <div class="effect-shadow"></div>
                <div class="bg-shadow"></div>
            </div>

            <!-- WINTER -->
            <div class="fs-season season-winter">
                {% for item in range(1, 5) %}
                    <div class="item {{winter['item' ~ i].amountOfRole == 3 ? 'riddle-solved' : ''}}">
                        <a href={{winter['item' ~ i].role != 1 ? winter['item' ~ i].url : '#'}}>
                            <img alt={{winter['item' ~ i].role != 1 ? getCustomField(winter['item' ~ i].id, 'gallery', 'current-riddle') : 'locked'}} src={{winter['item' ~ i].role != 1 ? winter['item' ~ i].photos[0].image | upload_url : '/themes/banana/img/four-seasons/locked.jpg'}}>
                            <div class="border-image">
                                <img alt="stone frame border" src="{{theme.uri}}/img/four-seasons/stone-frame-medium.png">
                            </div>
                            <span class="solved-number">
                                {{winter['item' ~ i].amountOfRole != 1 ? winter['item' ~ i].solved_number : null}}
                            </span>
                        </a>
                    </div>
                {% endfor %}

                <div class="winter-is-coming">
                    <div class="snow snow--near"></div>
                    <div class="snow snow--near snow--alt"></div>

                    <div class="snow snow--mid"></div>
                    <div class="snow snow--mid snow--alt"></div>

                    <div class="snow snow--far"></div>
                    <div class="snow snow--far snow--alt"></div>
                </div>

                <div class="effect-shadow"></div>
                <div class="bg-shadow"></div>
            </div>
        </div>
    </div>
{% endblock content %}
