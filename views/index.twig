                            <div class="align-vertical--contain">
                              <h4 class="game-title align-vertical--child">
                                {{item.title}}
                              </h4>
                              <dl class="game-score align-vertical--child ">
                                <dt>{{item.rating}}</dt>
                                <dd>{{item.point}}</dd>
                              </dl>
                            </div>
                          </a>
                        </li>
                      {% endfor %}
                    </ol>
                    <footer class="pod-footer">
                      <a href="/danh-gia">See All Reviews</a>
                    </footer>
                  </div>
                </section>

                <section class="d-none pod pod--topgames pod-filter js-filter-pod">
                  <dl class="pod-header  ">
                    <dt class="pod-header__item">
                      <div class="pod-title">
                        <h4>Danh sách game phổ biến</h4>
                        <span class="pod-div" role="presentation" aria-hidden="true"></span>
                      </div>
                    </dt>
                    <dd class="pod-header__item pod-header__filters pod-header__filters--js no-flex hide-mobile">
                      <div class="pod-header__filters--select">
                        <select name="sort" class="js-filter-json"
                          data-filter-query="topgames" data-filter-nohistory="1" data-filter-nodata="1">
                          <option value="overall" data-filter-url="/river/games/overall">OVERALL</option>
                          <option value="xbox-one" data-filter-url="/river/games/xbox-one">ONLINE</option>
