{% extends "layout.twig" %}

{% block pre_include %}
    <title>{{settings.meta_title ? settings.meta_title : settings['shop_name']}}</title>
{% endblock %}

{% block content %}
   <div id="site-wrapper">
    <div id="mantle_skin">
      <div id="rbSkin" class="rbSkin">
        <span id="adSkinLeft"></span>
        <span id="adSkinRight"></span>
        <div class="mapped-ad mapped-skin_top">
          <div id="skin_top" class="ad-wrap"></div>
        </div>

        <div id="wrapper">
          {% include 'snippet/index-featured-post.twig' %}
          <div id="site" role="main">
            <div id="default-content" class=" container row">
              {% include 'snippet/index-featured-slider.twig' %}
              <div id="leader_plus_top-wrap" class="mapped-ad mapped-leader_plus_top">
                <div id="leader_plus_top" class="ad-wrap"></div>
              </div>
              {% include 'snippet/index-content.twig' %}
              <aside class="secondary-content span4 medium-span5">
                <div id="mpu_top-wrap" class="js-mapped-ad mapped-ad mapped-mpu_top mapped-mpu_top-dart">
                  <div id="mpu_top" class="ad-wrap ad-wrap-mpu_top"></div>
                </div>
                <section class="pod pod-filter">
                  <dl class="pod-header">
                    <dt class="pod-header__item">
                      <div class="pod-title">
                        <h4>Đánh giá</h4><span class="pod-div" role="presentation" aria-hidden="true"></span>
                      </div>
                    </dt>
                    <dd class="pod-header__item pod-header__filters pod-header__filters--js no-flex">
                      <div class="pod-header__filters--select">
                        <select name="sort" class="js-filter-json"
                          data-filter-query="platform" data-filter-nohistory="1" data-filter-nodata="1">
                          <option value="latest" data-filter-url="/river/reviews/latest">MỚI NHẤT</option>
                          <option value="xbox-one" data-filter-url="/river/reviews/xbox-one">ĐIỂM CAO NHẤT</option>
                          <option value="ps4" data-filter-url="/river/reviews/ps4">ĐIỂM THẤP NHẤT</option>
                        </select>
                      </div>
                    </dd>
                  </dl>
                  <div class="filter-results js-filter-results">
                    <ol class="reviews-list">
                      <li class="reviews-list__item reviews-list__item--first" style="background-image: url('../../img/3480818-battle-princess-madelyn-review-thumb-nologo.jpg')">
                        <a href="reviews/battle-princess-madelyn-review-halfway-there/1900-6417058/index.html">
                          <div class="align-vertical--contain">
                            <div class="align-vertical--child game-info-wrapper">
                              <h4 class="game-title">
                                Battle Princess Madelyn
                              </h4>
                            </div>
                            <dl class="game-score align-vertical--child ">
                              <dt>
                                <div class="gs-score  gs-score--small score-6">
                                  <div class="gs-score__clip">
                                    <div class="gs-score__pie gs-score__spinner"></div>
                                  </div>
                                  <div class="gs-score__clip gs-score__clip2">
                                    <div class="gs-score__pie gs-score__filler"></div>
                                  </div>
                                  <div class="gs-score__inner">
                                    <div class="gs-score__table">
                                      <div class="gs-score__cell">6
                                      </div>
                                    </div>
                                  </div>
                                </div>
                              </dt>
                              <dd>Tạm được</dd>
                            </dl>
                          </div>
                        </a>
                      </li>
                      <li class="reviews-list__header"><span class="reviews-list__header-game">Game</span><span class="reviews-list__header-score">Score</span>
                      <li>

                      {% for item in items %}
                        <li class="reviews-list__item">
                          <a href="{{item.url}}">
                            <div class="align-vertical--contain">
                              <h4 class="game-title align-vertical--child">
                                {{item.title}}
                              </h4>
                              <dl class="game-score align-vertical--child ">
                                <dt>{{item.rating}}</dt>
                                <dd>{{item.point}}</dd>
                              </dl>
                            </div>
                          </a>
                        </li>
                      {% endfor %}
                    </ol>
                    <footer class="pod-footer">
                      <a href="/danh-gia">See All Reviews</a>
                    </footer>
                  </div>
                </section>
              </aside>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
      
{% endblock content %}
