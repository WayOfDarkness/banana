{% extends "layout.twig" %}

{% block pre_include %}
    <title>{{page.title}}</title>
    <link href="https://fonts.googleapis.com/css?family=Patrick+Hand" rel="stylesheet">
    <link rel="stylesheet" href="{{theme.uri}}/css/event.css">
{% endblock %}

{% block post_include %}
    <script src="{{theme.uri}}/js/event.js"></script>
{% endblock %}

{% block content %}
    <div class="menu">
        <div class="introduction-title">{{page.description}}</div>
        <div class="introduction-content">{{page.content | raw}}</div>
        <div class="button-group">
            <div class="button" id="start-btn" >
                Bắt đầu
                <span class="shift">››</span>
                <div class="mask"></div>
            </div>

            <div class="button" id="point-btn" onclick="clickFunc(this.id)">
                Điểm
                <span class="shift">››</span>
                <div class="mask"></div>
            </div>

            <div class="button" id="riddles-btn" onclick="clickFunc(this.id)">
                Mật mã
                <span class="shift">››</span>
                <div class="mask"></div>
            </div>

            <div class="button" id="ranking-btn" >
                Bảng xếp hạng
                <span class="shift">››</span>
                <div class="mask"></div>
            </div>

            <div class="button" id="rewards-btn" onclick="clickFunc(this.id)">
                Phần thưởng
                <span class="shift">››</span>
                <div class="mask"></div>
            </div>
        </div>
    </div>

    <div class="modal" id="modalbtn3">
        <div class="modal-content">
            <div class="modal-header">
                <span class="close-btn">&times;</span>
                <div>Giới thiệu về phần thưởng</div>
            </div>
            <div class="modal-body">{{getCustomField(page.id, 'page', 'phan-thuong') | raw}}</div>
            <div class="modal-footerr"></div>
        </div>
    </div>
{% endblock content %}
