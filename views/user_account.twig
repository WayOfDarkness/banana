<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="shortcut icon" href="{{ settings.favicon | upload_url }}">
  <link rel="stylesheet" href="{{ theme.uri }}/fonts/font-file.css">
  <link rel="stylesheet" href="{{ theme.uri }}/css/init.css">

  <link rel="stylesheet" href="{{ theme.uri }}/css/styles.css">
  <script src="{{ theme.uri }}/js/jquery-3.3.1.min.js"></script>
  <script src="{{ shop.static }}/libs/StoreAPI.jquery.js" type="text/javascript"></script>

  {% set seo = Seo() %}
  <meta name="title" content="{{ seo.meta_title ? seo.meta_title:settings.home_name }}">
  <meta name="description" content="{{ seo.meta_description }}">
  <meta name="keywords" content="{{ seo.meta_keyword }}">
  <meta name="robots" content="{{ seo.meta_robots }}">
  <meta property="og:title" content="{{ seo.meta_title }}"/>
  <meta property="og:type" content="website"/>
  <meta property="og:url" content="{{ currentUrl() }}"/>
  <meta property="og:image" content="{{ seo.meta_image }}"/>
  <meta property="og:description" content="{{ seo.meta_description }}"/>

  <title>Tạo lại mật khẩu</title>
  <link rel="stylesheet" href="{{ theme.uri }}/css/create-password.css">
</head>

<body>

<div class="user-account">
  <div class="user-account-wrapper">
    <div class="change-nickname">
      <input type="text" placeholder="{{ 'tên của user' }}">
    </div>
    <div class="change-avatar">
      <p>Avatar: <input type="file" onchange="checkInputImg()"></p>
    </div>
    <div class="change-password">
      <div class="modal-change-password d-none">
        <div class="content-modal">
          <h2 class="text-blue text-center text-bold"
              style="margin-bottom: 0.5rem; padding-bottom: 0.5rem;">
            Cập Nhập Thông Tin
          </h2>
          <label for="old-password">Nhập mật khẩu cũ</label>
          <input type="password" id="old-password" placeholder="Nhập mật khẩu cũ">
          <label for="new-password">Nhập mật khẩu mới</label>
          <input type="password" id="new-password" placeholder="Nhập mật khẩu mới">
          <label for="re-new-password">Nhập lại mật khẩu mới</label>
          <input type="password" id="re-new-password" placeholder="Nhập lại mật khẩu mới">
          <p class="modal-change-password-error d-none">Error here</p>
          <div class="modal-password-footer">
            <div class="col-6">
              <button class="full-width" onclick="closeModalChangePassword()">Hủy</button>
            </div>
            <div class="col-6">
              <button class="full-width" onclick="postChangePassword()">Cập nhập</button>
            </div>
          </div>
        </div>
      </div>
    </div>
    <button class="update-info" onclick="updateInfo()"></button>
  </div>
</div>

<script>
  function updateInfo() {

  }
  function checkInputImg() {
    let _filename = $('.change-avatar input').val();
    console.log(_filename);
    if(_filename) {
      $('.change-avatar input').addClass('selected');
    }
    else {
      $('.change-avatar input').removeClass('selected');
    }
    $('.change-avatar .avatar-name').html(_filename);
  }
</script>
</body>
</html>