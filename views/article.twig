{% extends "layout.twig" %}

{% block pre_include %}
    <title>{{article.title}}</title>
{% endblock %}

{% block post_include %}
  <script>
    $(document).ready(function () {
      var date = $('.author-details span').html();
      $('.author-details span').html(checkDateName(date.split(' ')[0]));
    })
  </script>
{% endblock %}

{% block content %}

    {% set parentBlog = Blog(article.blogs[0]) %}
    {% if CustomField(article.id,'article','author') %}
      {% set author = CustomField(article.id,'article','author') %}
    {% else %}
      {% set author = 'Phi' %}
    {% endif %}

    <main role="main" class="container article----if--contains">
      <a id="main-content" tabindex="-1"></a>
      <div class="content-wrapper">
        <div class="layout-content">
          <div class="region">
            <div class="block">
              <div class="ds-full-width">
                <div class="field field--name-dynamic-block-fieldnode-content-bug field--type-ds field__item">
                  <div class="views-element-container p-0">
                    <div class="view">
                      <div class="view-content">
                        <div>
                          <div class="bug-text">{{parentBlog.title}}</div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="field field--name-field-header field__item">
                  <div class="layout layout--onecol">
                    <div class="layout__region">
                      <div class="full-width">
                        <div class="field field--name-field-image field__item">
                          {% if article.image %}
                            <img src="{{article.image | upload_url}}" width="1460" height="821" alt="{{article.title}}" title="{{article.title}}" class="image-style-full"/>
                          {% else %}
                            <img src="{{settings.sub_img | upload_url}}" width="1460" height="821" alt="{{article.title}}" title="{{article.title}}" class="image-style-full"/>
                          {% endif %} 
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              <div class="node ds-standard-article clearfix">
