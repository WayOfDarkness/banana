                        <a href="javascript:;" class="config-tab config-req">Cấu hình</a>
                      </ul>
                      <div class="author-footer config-footer config-info-area clearfix">
                        <div class="author-footer-info">
                          {{article.game.infomation | raw}}
                        </div>
                      </div>
                      <div class="author-footer config-footer config-req-area d-none clearfix">
                        <div class="author-footer-info">
                          {{article.game.requirememt}}
                        </div>
                      </div>
                    </div>

                    <!-- ARTICLE RATING -->
                    {% set value = getCustomField(article.id, 'article', 'appreciation') %}
                    <div class="review-breakdown rating-overflow">
                      <div class="review-breakdown__inner">
                        <div class="container row">
                          <dl class="breakdown breakdown-good span6">
                            <dt class="breakdown-good__title"><span>Ưu điểm</span></dt>
                            {% for item in value[0] %}
                              <dd class="breakdown-good__item">
                                <i>
                                  <svg version="1.1" width="28" height="28" viewBox="0 0 28 28"
                                      aria-hidden="true" class="symbol symbol-plus-sign">
                                    <path
                                      d="M19 15v-2q0-0.406-0.297-0.703t-0.703-0.297h-4v-4q0-0.406-0.297-0.703t-0.703-0.297h-2q-0.406 0-0.703 0.297t-0.297 0.703v4h-4q-0.406 0-0.703 0.297t-0.297 0.703v2q0 0.406 0.297 0.703t0.703 0.297h4v4q0 0.406 0.297 0.703t0.703 0.297h2q0.406 0 0.703-0.297t0.297-0.703v-4h4q0.406 0 0.703-0.297t0.297-0.703zM24 14q0 3.266-1.609 6.023t-4.367 4.367-6.023 1.609-6.023-1.609-4.367-4.367-1.609-6.023 1.609-6.023 4.367-4.367 6.023-1.609 6.023 1.609 4.367 4.367 1.609 6.023z"></path>
                                  </svg>
                                </i>
                                {{item.value}}
                              </dd>
                            {% endfor %}
                          </dl>
                          <dl class="breakdown breakdown-bad span6">
                            <dt class="breakdown-bad__title"><span>Nhược điểm</span></dt>
                            {% for item in value[1] %}
                              <dd class="breakdown-bad__item">
                                <i>
                                  <svg version="1.1" width="28" height="28" viewBox="0 0 28 28"
                                      aria-hidden="true" class="symbol symbol-minus-sign symbol--color-link">
                                    <path
                                      d="M19 15v-2q0-0.406-0.297-0.703t-0.703-0.297h-12q-0.406 0-0.703 0.297t-0.297 0.703v2q0 0.406 0.297 0.703t0.703 0.297h12q0.406 0 0.703-0.297t0.297-0.703zM24 14q0 3.266-1.609 6.023t-4.367 4.367-6.023 1.609-6.023-1.609-4.367-4.367-1.609-6.023 1.609-6.023 4.367-4.367 6.023-1.609 6.023 1.609 4.367 4.367 1.609 6.023z"></path>
                                  </svg>
                                </i>
                                {{item.value}}
                              </dd>
                            {% endfor %}
                          </dl>

                          <dl class="breakdown breakdown-score">
                            <dt class="review-score">
                              <div class="gs-score gs-score--large score-{{article.admin_point}}">
                                <div class="gs-score__clip">
                                  <div class="gs-score__pie gs-score__spinner"></div>
                                </div>
                                <div class="gs-score__clip gs-score__clip2">
                                  <div class="gs-score__pie gs-score__filler"></div>
                                </div>
                                <div class="gs-score__inner">
                                  <div class="gs-score__table">
                                    <div class="gs-score__cell">
                                      <span aria-label="Review score {{article.admin_point}}" tabindex="0">{{article.admin_point}}</span>
                                    </div>
                                  </div>
                                </div>
                              </div>
                            </dt>
                            {% include 'snippet/point-system.twig' %}
                          </dl>
                        </div>
                      </div>
                    </div>
                  {% endif %}

                  <!-- ARTICLES AUTHOR -->
                  <div class="field field--type-ds field__item">
                    <div class="views-element-container">
                      <div class="view">
                        <div class="view-content">
                          <div>
                            <div class="author-footer clearfix">
                              {% if author == 'Sigma' %}
                                <div class="author-footer-photo">
                                  <a href="#">
                                    <img src="{{theme.uri}}/img/author/Sigma.jpg" width="100" height="100" alt="Sigma" class="image-style-user-thumbnail"/>
                                  </a>
                                </div>
                                <div class="author-footer-info">
                                  <div class="author-footer-name">
                                    <a title="View user profile." href="javascript:;" class="username">{{author}}</a>
                                  </div>
                                  <div class="author-footer-title">Admin</div>
                                  <div class="author-footer-shortbio">Sigma có kinh nghiệm chơi và đánh giá game trên 10 năm, hiện anh vẫn đang tiếp tục chơi để có thể viết những bài chất lượng cho độc giả</div>
                                </div>
                              {% else %}
                                <div class="author-footer-photo">
                                  <a href="#">
                                    <img src="{{theme.uri}}/img/author/Phi.jpg" width="100" height="100" alt="Phi" class="image-style-user-thumbnail"/>
                                  </a>
                                </div>
                                <div class="author-footer-info">
                                  <div class="author-footer-name">
                                    <a title="View user profile." href="javascript:;" class="username">{{author}}</a>
                                  </div>
                                  <div class="author-footer-title">Admin</div>
                                  <div class="author-footer-shortbio">Phi tuy mới tìm hiểu và chơi game gần đây, tuy nhiên cô ấy học rất nhanh và vẫn đang cố gắng tạo ra nhiều bài viết chất lượng cho độc giả</div>
                                </div>
                              {% endif %}
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>

                  <!-- USER BOOKMARKS -->
                  <div class="ds-footer-full">
                    <div class="field field--type-ds field__item">
                      <div class="views-element-container">
                        <div id="default-content" class="recommended-articles-widget view">
                          <div class="view-header">
                            <h2>{{parentBlog.title}} đã lưu</h2>
                          </div>
                          <div class="article-carousel owl-carousel owl-theme">
                            {% for item in parentBlog.articles | slice (0, 10) %}
                                {% if item.id != article.id %}
                                    <div class="teaser">
                                        <div class="teaser-left">
                                            <div class="teaser-left-wrapper">
                                                <div class="promo-img-thumb">
                                                    <a href="{{item.url}}">
                                                    {% if item.image %}
                                                      <img src="{{item.image | upload_url}}"/>
                                                    {% else %}
                                                      <img src="{{settings.sub_img | upload_url}}"/>
                                                    {% endif %} 
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="teaser-right">
                                            <div class="teaser-right-wrapper">
                                                <h3 class="page-title article-title">
                                                    <a href="{{item.url}}">{{item.title}}</a>
                                                </h3>
                                            </div>
                                        </div>
                                    </div>
                                {% endif %}
                            {% endfor %}
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>

                  <div id="block-chat" class="block-chat clearfix">

                    <!-- FACEBOOK COMMENT -->
                    <div class="block-comment">
                      <div class="fb-comments" data-href="https://www.facebook.com/PageChoiGiDay" data-width="100%" data-numposts="5"></div>
                      <div id="fb-root"></div>
                      <script>(function(d, s, id) {
                        var js, fjs = d.getElementsByTagName(s)[0];
                        if (d.getElementById(id)) return;
                        js = d.createElement(s); js.id = id;
                        js.src = 'https://connect.facebook.net/vi_VN/sdk.js#xfbml=1&version=v3.2&appId=839840852755043&autoLogAppEvents=1';
                        fjs.parentNode.insertBefore(js, fjs);
                      }(document, 'script', 'facebook-jssdk'));
                      </script>
                    </div>

                    <!-- USER REVIEWS -->
                    {% if article.type == 'review' %}
                      <div class="block-reviews float-right">
                        <h2 class="block-title"><img src="{{theme.uri}}/img/icon/icon-star.png">
                          <span>Đánh giá</span>
                        </h2>
                        
                        <!-- REVIEW FORM -->
                        {% if customer.logged_in %}
                          <div class="text-editer clearfix">
                            <textarea name="comment" placeholder="Thêm bình luận..." id="text-editer-comment"></textarea>
                            <div class="review-pusher">
                              <button class="review-pusher-item btn-submit-comment effect-hover-1" onclick="postReview()">
                                Đăng đánh giá
                              </button>
                              <dd class="pod-header__item review-pusher-item pod-header__filters pod-header__filters--js no-flex">
                                <div class="pod-header__filters--select">
                                  <select class="effect-hover-1" name="sort">
                                    <option value="10" selected>10 - Hoàn hảo</option>
                                    <option value="9">9 - Xuất sắc</option>
                                    <option value="8">8 - Hay</option>
                                    <option value="7">7 - Khá</option>
                                    <option value="6">6 - Tạm được</option>
                                    <option value="5">5 - Trung bình</option>
                                    <option value="4">4 - Nghèo nàn</option>
                                    <option value="3">3 - Tệ</option>
                                    <option value="2">2 - Quá tệ</option>
                                    <option value="1">1 - Trash</option>
                                    <option value="0">Điểm</option>
                                  </select>
                                </div>
                              </dd>
                            </div>
                          </div>
                        {% endif %}

                        <!-- LIST REVIEWS -->
                        <div class="list-comment-review">
                          {% for item in article.reviews %}
                            <div class="block-reviews--comment">
                              <div class="block-reviews--auth">
                                {% if customer.avatar %}
                                  <img src="{{customer.avatar | upload_url}}" alt="avatar" class="comment-avatar"/>
                                {% else %}
                                  <img src="{{theme.uri}}/img/avatar-default.png" alt="avatar" class="comment-avatar"/>
                                {% endif %}
                                <span>Đánh giá bởi <strong class="review-author">{{item.user}}</strong></span>
                                <span class="rating-review">
                                  <img src="{{theme.uri}}/img/icon/icon-star.png" width="16px" height="16px"/>
                                  {{item.point}}/10
                                </span>
                              </div>
                              <div class="comment-text-review">
                                <p class="review-title">
                                  {{item.title}}
                                </p>
                                <p class="review-content">
                                  {{item.content}}
                                </p>
                              </div>
                            </div>
                          {% endfor %}
                          <button class="btn-load-more-comment">Tải thêm đánh giá</button>
                        </div>
                      </div>
                    {% endif %}
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>

    <input type="hidden" id="article_id" value="{{article.id}}"/>
    <input type="hidden" id="article_like_status" value="{{article.statusLike}}"/>
{% endblock content %}