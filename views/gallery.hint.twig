{% extends "layout.twig" %}

{% block pre_include %}
    <title>{{getCustomField(gallery.id, 'gallery', 'solved-riddle')}}</title>
    <link href="https://fonts.googleapis.com/css?family=Patrick+Hand" rel="stylesheet">
    <style>
        body {
            background-color: #000000;
            color: #FFFFFF;
            text-align: center;
            margin: 0;
            overflow: hidden;
        }
        .hint-screen {
            position: absolute;
            left: 50%;
            top: 50%;
            width: 500px;
            height: 250px;
            box-sizing: border-box;
            margin: -125px 0 0 -250px;
            font-size: 24px;
            padding: 10px;
            font-family: 'Patrick Hand', cursive !important;
        }
    </style>
{% endblock %}

{% block content %}
    <div class="hint-screen">Gợi ý: {{gallery.description | raw}}</div>
{% endblock content %}